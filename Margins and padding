p {
    border: black 0.1em solid;
}
.bigredsquare {
	/* border width keywords: thin, medium, thick */
    border: red thick solid; 
}
.marginexample {
    margin: 0.5em;
}
.paddingexample {
	padding: 1em;
}
.both {
    margin: 1em;
	padding: 1em;
}
.animalsbox {
    border: blue medium solid;
    margin-right: 3em;
    padding-left:0.8em;
    margin-top: 2.5em;  
    padding-bottom:4.75em;
}



